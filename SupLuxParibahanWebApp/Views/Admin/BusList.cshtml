
@{
    ViewBag.Title = "BUS LIST";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    @Styles.Render("~/Content/admin.css");
}

<!--    bus list container    -->
<section class="bus-list-section">
    <!--    search bus div   -->
    <div class="search-bus-container">
        <div class="search-form">
            <form action="/" method="post">
                <div class="search-coach-input">
                    <input id="coach-no-input" type="text" name="name" value="" placeholder="Enter Coach No" autocomplete="off" />
                </div>
                <div id="coach-type-input-container" class="search-coach-input">
                    <input id="coach-type-input" type="text" name="name" value="Select Coach Type" autocomplete="off" readonly />
                    <span id="down-arrow"><i class="fas fa-chevron-down"></i></span>
                    <ul id="coach-type-menu" class="hidden">
                        <li class="coach-menu-item">Select Coach Type</li>
                        <li class="coach-menu-item">NON-AC</li>
                        <li class="coach-menu-item">AC(Bi-Axle)</li>
                        <li class="coach-menu-item">AC(Multi-Axle)</li>
                        <li class="coach-menu-item">AC(Double Decker)</li>
                        <li class="coach-menu-item">AC(Sleeper)</li>
                    </ul>
                </div>
                <div class="search-coach-button">
                    <button class="suplux-btn"><i class="fas fa-search"></i>Search Coach</button>
                </div>
            </form>
        </div>
    </div>

    <!--    coach info div   -->
    <div class="container-fluid coach-info-container">
        <div class="coach-info-row">
            <div class="coach-info">
                <p>Coach No.</p>
                <h3 class="coach-no">M-4055</h3>
            </div>
            <div class="coach-info">
                <p>Coach Type</p>
                <h3>AC (Multi-Axle)</h3>
            </div>
            <div class="coach-info">
                <p>Starting Point</p>
                <h3>Dhaka</h3>
            </div>
            <div class="coach-info">
                <p>Ending Point</p>
                <h3>Chattogram</h3>
            </div>
            <div class="coach-info">
                <p>Departure Time</p>
                <h3>10:00 PM</h3>
            </div>
            <div class="coach-info">
                <p>Fare</p>
                <h3>BDT 1200</h3>
            </div>
            <div class="coach-info-btn-container">
                <button class="suplux-btn maintain-btn" data-toggle="modal" data-target="#bus-maintain-modal"><i class="fas fa-cogs"></i>Maintanence</button>
            </div>
            <div class="coach-info-btn-container">
                <button class="suplux-btn halt-btn" data-toggle="modal" data-target="#bus-halt-modal"><i class="fas fa-ban"></i>Halt</button>
            </div>
        </div>
        <div class="coach-info-row maintained">
            <div class="coach-info">
