    <div id="add-coach-form" class="add-new-bus-form-container">
        <h3 class="form-title">Add New Coach</h3>
        <form id="add-bus-form" action="/Admin/AddNewBus" method="post">
            <div class="add-bus-coach-info">
                <div class="add-bus-input-wrapper">
                    <input id="new-coach-no" type="text" name="coachNo" value="@Session["newCoachNo"]" placeholder="Coach No" readonly />
                </div>
                <div class="add-bus-input-wrapper">
                    <input type="text" name="coachType" value="@Session["newCoachType"]" placeholder="Coach Type" readonly />
                </div>
                <div class="autocomplete add-bus-input-wrapper">
                    <input id="starting-point" type="text" name="startingFrom" value="" placeholder="Starting Point" autocomplete="off" required />
                </div>
                <div class="autocomplete add-bus-input-wrapper">
                    <input id="ending-point" type="text" name="destination" value="" placeholder="Ending Point" autocomplete="off" required />
                </div>
                <div class="add-bus-input-wrapper">
                    <input type="text" name="departureTime" value="" placeholder="Departure Time" autocomplete="off" required />
                </div>
                <div class="add-bus-input-wrapper">
                    <input type="text" name="farePerSeat" value="" placeholder="Fare" autocomplete="off" required />
                    <span>BDT</span>
                </div>
            </div>
            <div class="add-coach-btn-container">
                <button id="add-coach-btn" class="suplux-btn" type="button" data-toggle="modal" data-target="#add-bus-modal"><i class="fas fa-plus-circle"></i>Add New Coach</button>
            </div>
            <!--    add coach confirmation modal   -->
            <div id="add-bus-modal" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title"><i class="fas fa-exclamation-triangle maintain-ex"></i><span id="add-bus-modal-title"></span></h4>
                        </div>
                        <div class="modal-body">
                            <p>Do you really wish to add this new coach? This coach will be add to the fleet immediately if you press <strong>"Yes, I Do."</strong></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="suplux-btn suplux-alt-btn" data-dismiss="modal">No</button>
                            <button id="add-coach-modal-yes-btn" type="submit" class="suplux-btn" data-confirm="modal">Yes, I Do.</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@Scripts.Render("~/Scripts/autocomplete-field.js")

<script>

    /*
     * functions
     */
    function addClass(elementId, className) {

        const element = document.getElementById(elementId);
        element.classList.add(className);
    }

    function removeClass(elementId, className) {

        const element = document.getElementById(elementId);
        element.classList.remove(className);
    }

    function sleep(milliseconds) {
        return new Promise(resolve => setTimeout(resolve, milliseconds));
    }

    const addBusForm = document.getElementById('add-bus-form');
    const addBusReqField = addBusForm.querySelectorAll('[required]');

    //checking required field is filled or not
    addBusReqField.forEach(function (reqField) {

        reqField.addEventListener('click', function () {

            reqField.classList.remove('required-field-not-filled');
        });
    });

    //this function is submitting the form after the modal is confirmed
    document.getElementById('add-coach-modal-yes-btn').addEventListener('click', function () {

        let allReqFieldsFilled = true;

        addBusReqField.forEach(function (req) {

            if (req.value != '') {
                allReqFieldsFilled = true;
            } else {
                allReqFieldsFilled = false;
                req.classList.add('required-field-not-filled');
                return;
            }
        });

        if (allReqFieldsFilled) {

            addBusForm.submit();
        } else {
            $('#add-bus-modal').modal('hide');
        }
    });

    //this function is setting the modal title when the reroute button is clicked
    document.getElementById('add-coach-btn').addEventListener('click', function () {

        document.getElementById('add-bus-modal-title').innerHTML = `Do you really want to add Coach no. <strong>${document.getElementById('new-coach-no').value}</strong> to the Fleet ?`;
    });

    /*
     * picking data from coach type dropdown
     */
    document.getElementById('coachType').addEventListener('focus', function () {

        addClass('down-arrow', 'arrow-rotate');
        addClass('coach-type-menu', 'visible');
        removeClass('coach-type-menu', 'hidden');
    });

    document.getElementById('coachType').addEventListener('blur', function () {


        document.querySelectorAll('.coach-menu-item').forEach(item => {
            item.addEventListener('click', event => {

                document.getElementById('coachType').value = event.target.innerText;
            })
        });

        sleep(150).then(() => {
            removeClass('down-arrow', 'arrow-rotate');
            removeClass('coach-type-menu', 'visible');
            addClass('coach-type-menu', 'hidden');
        });
    });

